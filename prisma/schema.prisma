generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Comment {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  postId    String    @map("post_id") // Contentful post sys.id
  author    String    @map("author") // Commenter's name
  email     String?   @map("email") // Optional email
  comment   String    @map("comment")
  timestamp DateTime  @default(now()) @map("timestamp")
  status    String    @default("pending") @map("status") // pending, approved

  @@index([postId]) // Optimize queries by postId
}



model EventFeedback {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  eventSlug String
  
  // Event Experience
  presentationRating  String?
  gainedFromEvent     String?  
  venueRating         String?
  activitiesRating    String?
  
  // Event Awareness
  heardAboutEvent     String?
  heardAboutEventOther String?
  
  // Brand Awareness
  knewAboutNovelCare  String?
  knewAboutCarersWA   String?
  improvedUnderstanding String?
  
  // Participant Information
  onNDIS              String?
  takingCareOf        String?
  takingCareOfOther   String?
  
  // Additional Comments
  additionalComments  String? 
  
  // Metadata
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([eventSlug])
  @@index([createdAt])
}